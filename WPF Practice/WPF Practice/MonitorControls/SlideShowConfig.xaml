<UserControl x:Class="WPF_Practice.MonitorControls.SlideShowConfig"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="314" d:DesignWidth="357">
    <Grid>
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="12,12,0,0" Name="FadeTypes" VerticalAlignment="Top" Width="179">
            <ComboBoxItem>Fade</ComboBoxItem>
            <ComboBoxItem>Pan</ComboBoxItem>
            <ComboBoxItem>Spiral</ComboBoxItem>
            <ComboBoxItem>Random</ComboBoxItem>
        </ComboBox>
        <Label Content="Fade Time:" Height="28" HorizontalAlignment="Left" Margin="10,46,0,0" Name="label1" VerticalAlignment="Top" />
        <Label Content="DisplayTime:" Height="28" HorizontalAlignment="Left" Margin="12,0,0,211" Name="label2" VerticalAlignment="Bottom" Width="79" />
        <Label Content="Pan Time:" HorizontalAlignment="Left" Margin="12,109,0,179" Name="label3" Width="67" />
        <Label Content="Direction In:" Height="28" HorizontalAlignment="Left" Margin="12,141,0,0" Name="label4" VerticalAlignment="Top" />
        <Label Content="Direction Out:" Height="28" HorizontalAlignment="Left" Margin="10,164,0,0" Name="label5" VerticalAlignment="Top" />
        <Label Content="Rotation:" Height="28" HorizontalAlignment="Left" Margin="12,198,0,0" Name="label7" VerticalAlignment="Top" />
        <RadioButton Content="Alphabetical" Height="16" HorizontalAlignment="Left" Margin="217,41,0,0" Name="radioA" VerticalAlignment="Top" />
        <RadioButton Content="Reverse Alphabetical" Height="16" HorizontalAlignment="Left" Margin="217,62,0,0" Name="radioRevA" VerticalAlignment="Top" />
        <RadioButton Content="Random" Height="16" HorizontalAlignment="Left" Margin="217,83,0,0" Name="radioRandom" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="97,46,0,0" Name="txtFadeTime" VerticalAlignment="Top" Width="94" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="97,80,0,0" Name="txtDisplayTime" VerticalAlignment="Top" Width="94" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="97,110,0,0" Name="txtPanTime" VerticalAlignment="Top" Width="94" />
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="97,141,0,0" Name="directionInBox" VerticalAlignment="Top" Width="94">
            <ComboBoxItem>N</ComboBoxItem>
            <ComboBoxItem>S</ComboBoxItem>
            <ComboBoxItem>W</ComboBoxItem>
            <ComboBoxItem>E</ComboBoxItem>
        </ComboBox>
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="97,169,0,0" Name="directionoutBox" VerticalAlignment="Top" Width="94">
            <ComboBoxItem>N</ComboBoxItem>
            <ComboBoxItem>S</ComboBoxItem>
            <ComboBoxItem>W</ComboBoxItem>
            <ComboBoxItem>E</ComboBoxItem>
        </ComboBox>
        <TextBox Height="23" HorizontalAlignment="Left" Margin="97,198,0,0" Name="txtRotation" VerticalAlignment="Top" Width="94" />
        <CheckBox Content="Clockwise" Height="16" HorizontalAlignment="Left" Margin="12,232,0,0" Name="isClockwise" VerticalAlignment="Top" />
    </Grid>
</UserControl>
