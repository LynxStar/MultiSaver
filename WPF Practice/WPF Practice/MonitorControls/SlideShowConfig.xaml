<UserControl x:Class="WPF_Practice.MonitorControls.SlideShowConfig"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="314" d:DesignWidth="227">
    <Grid Height="315" Width="227" Loaded="Grid_Loaded">
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="12,12,0,0" Name="TransitionTypes" VerticalAlignment="Top" Width="179" DropDownClosed="TransitionTypes_DropDownClosed">
            <ComboBoxItem>Fade</ComboBoxItem>
            <ComboBoxItem>Pan</ComboBoxItem>
            <ComboBoxItem>Spiral</ComboBoxItem>
            <ComboBoxItem>Random</ComboBoxItem>
        </ComboBox>
        <Label Content="Fade Time:" Height="28" HorizontalAlignment="Left" Margin="14,144,0,0" Name="lblFade" VerticalAlignment="Top" />
        <Label Content="DisplayTime:" Height="28" HorizontalAlignment="Left" Margin="12,0,0,176" Name="label2" VerticalAlignment="Bottom" Width="79" />
        <Label Content="Pan Time:" HorizontalAlignment="Left" Margin="12,142,0,146" Name="lblpanTime" Width="67" />
        <Label Content="Direction In:" Height="28" HorizontalAlignment="Left" Margin="12,172,0,0" Name="lblDirIn" VerticalAlignment="Top" />
        <Label Content="Direction Out:" Height="28" HorizontalAlignment="Left" Margin="10,202,0,0" Name="lblDirOut" VerticalAlignment="Top" />
        <Label Content="Rotation:" Height="28" HorizontalAlignment="Left" Margin="12,173,0,0" Name="lblRotation" VerticalAlignment="Top" />
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="97,173,0,0" Name="directionInBox" VerticalAlignment="Top" Width="94" DropDownClosed="directionInBox_DropDownClosed">
            <ComboBoxItem>North</ComboBoxItem>
            <ComboBoxItem>South</ComboBoxItem>
            <ComboBoxItem>West</ComboBoxItem>
            <ComboBoxItem>East</ComboBoxItem>
        </ComboBox>
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="97,204,0,0" Name="directionoutBox" VerticalAlignment="Top" Width="94" DropDownClosed="directionoutBox_DropDownClosed" >
            <ComboBoxItem>North</ComboBoxItem>
            <ComboBoxItem>South</ComboBoxItem>
            <ComboBoxItem>West</ComboBoxItem>
            <ComboBoxItem>East</ComboBoxItem>
        </ComboBox>
        <CheckBox Content="Clockwise" Height="16" HorizontalAlignment="Left" Margin="12,211,0,0" Name="isClockwise" VerticalAlignment="Top" Checked="isClockwise_Checked" Unchecked="isClockwise_Checked" />
        <Label Content="Order:" Height="28" HorizontalAlignment="Left" Margin="12,72,0,0" Name="label6" VerticalAlignment="Top" />
        <ComboBox Height="23" HorizontalAlignment="Right" Margin="0,77,36,0" Name="orderComboBox" VerticalAlignment="Top" Width="94" DropDownClosed="orderComboBox_DropDownClosed">
            <ComboBoxItem Content="Alphabetical" />
            <ComboBoxItem Content="RevAlphabetical" />
            <ComboBoxItem Content="Random" />
        </ComboBox>
        <TextBox Height="23" HorizontalAlignment="Left" Margin="97,48,0,0" Name="pictureLocation" VerticalAlignment="Top" Width="94" TextChanged="pictureLocation_TextChanged" />
        <Label Content="Location:" Height="28" HorizontalAlignment="Left" Margin="12,46,0,0" Name="label8" VerticalAlignment="Top" />
        <Button Content="..." Height="23" HorizontalAlignment="Right" Margin="0,48,12,0" Name="button1" VerticalAlignment="Top" Width="24" Click="fineFileButtonClick" />
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="97,173,0,0" Name="comboRotation" VerticalAlignment="Top" Width="96" DropDownClosed="comboRotation_DropDownClosed">
            <ComboBoxItem>1</ComboBoxItem>
            <ComboBoxItem>2</ComboBoxItem>
            <ComboBoxItem>3</ComboBoxItem>
            <ComboBoxItem>4</ComboBoxItem>
            <ComboBoxItem>5</ComboBoxItem>
            <ComboBoxItem>6</ComboBoxItem>
            <ComboBoxItem>7</ComboBoxItem>
            <ComboBoxItem>8</ComboBoxItem>
            <ComboBoxItem>9</ComboBoxItem>
            <ComboBoxItem>10</ComboBoxItem>
        </ComboBox>
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="97,0,0,148" Name="comboPanTime" VerticalAlignment="Bottom" Width="96" DropDownClosed="comboPanTime_DropDownClosed">
            <ComboBoxItem Content="1" />
            <ComboBoxItem Content="2" />
            <ComboBoxItem Content="3" />
            <ComboBoxItem Content="4" />
            <ComboBoxItem Content="5" />
            <ComboBoxItem Content="6" />
            <ComboBoxItem Content="7" />
            <ComboBoxItem Content="8" />
            <ComboBoxItem Content="9" />
            <ComboBoxItem Content="10" />
        </ComboBox>
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="97,111,0,0" Name="comboDisplayTime" VerticalAlignment="Top" Width="96" DropDownClosed="comboDisplayTime_DropDownClosed">
            <ComboBoxItem Content="1" />
            <ComboBoxItem Content="2" />
            <ComboBoxItem Content="3" />
            <ComboBoxItem Content="4" />
            <ComboBoxItem Content="5" />
            <ComboBoxItem Content="6" />
            <ComboBoxItem Content="7" />
            <ComboBoxItem Content="8" />
            <ComboBoxItem Content="9" />
            <ComboBoxItem Content="10" />
        </ComboBox>
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="97,145,0,0" Name="comboFadeTime" VerticalAlignment="Top" Width="96" DropDownClosed="comboFadeTime_DropDownClosed">
            <ComboBoxItem Content="1" />
            <ComboBoxItem Content="2" />
            <ComboBoxItem Content="3" />
            <ComboBoxItem Content="4" />
            <ComboBoxItem Content="5" />
            <ComboBoxItem Content="6" />
            <ComboBoxItem Content="7" />
            <ComboBoxItem Content="8" />
            <ComboBoxItem Content="9" />
            <ComboBoxItem Content="10" />
        </ComboBox>
    </Grid>
</UserControl>
