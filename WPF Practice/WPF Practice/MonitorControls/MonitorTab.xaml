<UserControl x:Class="WPF_Practice.MonitorControls.MonitorTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="81" d:DesignWidth="316" Loaded="UserControl_Loaded">
    <Grid Height="81" Name="border" Width="316" MouseEnter="Grid_MouseEnter" MouseLeave="Grid_MouseLeave" SizeChanged="Grid_SizeChanged">
        <Grid.RowDefinitions>
            <RowDefinition Height="52*" />
            <RowDefinition Height="30*" />
        </Grid.RowDefinitions>
        <Label Content="Label" Height="82" HorizontalAlignment="Left" Margin="102,0,0,0" Name="MonitorInfo" VerticalAlignment="Top" Width="217" Grid.RowSpan="2" />
        <Image Name="controlImage" Height="81" HorizontalAlignment="Left" Stretch="Fill" VerticalAlignment="Top" Width="105" Grid.RowSpan="2" />
    </Grid>
</UserControl>
